html.page-home
  &, body
    height: 100%
    min-height: 550px

.page-home
  body
    position: relative

  .container
    padding-top: 100px

  .jumbotron
    margin-bottom: 60px
    padding: 0
    border: 0
    background: none

    small
      display: block
      margin-top: 30px
      font-size: 35%
      color: #777

  nav
    text-align: center
    position: absolute
    width: 100%
    bottom: 100px

    a
      color: #777

    .list-inline > li
      padding-left: 15px
      padding-right: @padding-left
